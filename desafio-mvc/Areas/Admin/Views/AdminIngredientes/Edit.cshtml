@model desafio_mvc.DTO.IngredienteDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Editar Ingrediente</h3>
<hr>
<form class="form-horizontal" asp-area="Admin" asp-controller="AdminIngredientes" asp-action="Edit" method="post">
    <input type="hidden" asp-for="IngredienteId">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do Ingrediente" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="MedidaId">Unidade de Medida</label>
    <select class="form-control" asp-for="MedidaId"
        asp-items='@(new SelectList(@ViewBag.UnidadesDeMedida,"MedidaId","Nome"))'></select><br>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Atualizar" />
    </div>
</form>
<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>
