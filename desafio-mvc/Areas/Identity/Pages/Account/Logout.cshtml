@page
@model LogoutModel
<br>
@{
    ViewData["Title"] = "Saindo ...";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click Aqui para sair</button>
            </form>
        }
        else
        {
            <p>Obrigado por acessar nosso site .</p>
            <img src="/images/register.png" height="330" style="margin-left: 3em;" />
        }
    }
</header>